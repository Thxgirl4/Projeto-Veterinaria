<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Atendentes</title>
</head>
<body>
    <h1>Lista de Atendentes</h1>
    <form action="/atendente/filtrar" method="POST">
        <input type="text" name="pesquisar" placeholder="Pesquisar por nome">
        <button type="submit">Filtrar</button>
    </form>
    <table>
        <thead>
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Celular</th>
                <th>Email</th>
                <th>Endereço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% atendentes.forEach(atendente => { %>
                <tr>
                    <td><%= atendente.codAtendente %></td>
                    <td><%= atendente.nome %></td>
                    <td><%= atendente.cpf %></td>
                    <td><%= atendente.celular %></td>
                    <td><%= atendente.email %></td>
                    <td><%= atendente.endereco %></td>
                    <td>
                        <a href="/atendente/edit/<%= atendente._id %>">Editar</a>
                        <form action="/atendente/delet/<%= atendente._id %>" method="POST" style="display:inline;">
                            <button type="submit">Deletar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/atendente/add">Adicionar Atendente</a>
</body>
</html>