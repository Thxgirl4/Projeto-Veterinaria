<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Lista de Tutores</title>
</head>
<body>
    <h1>Lista de Tutores</h1>
    <form action="/tutores/filtr" method="POST">
        <input type="text" name="pesquisar" placeholder="Pesquisar por nome">
        <button type="submit">Filtrar</button>
    </form>
    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>CPF</th>
                <th>Endereço</th>
                <th>Celular</th>
                <th>Código do Animal</th>
                <th>Nome do Animal</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% tutores.forEach(tutor => { %>
                <tr>
                    <td><%= tutor.nome %></td>
                    <td><%= tutor.cpf %></td>
                    <td><%= tutor.endereco %></td>
                    <td><%= tutor.celular %></td>
                    <td><%= tutor.codAnimal %></td>
                    <td><%= tutor.nomeAnimal %></td>
                    <td>
                        <a href="/tutores/edt/<%= tutor._id %>">Editar</a>
                        <form action="/tutores/delet/<%= tutor._id %>" method="POST" style="display:inline;">
                            <button type="submit">Deletar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/tutores/add">Adicionar Tutor</a>
</body>
</html>